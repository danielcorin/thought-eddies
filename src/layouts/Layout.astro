---
import { SEO } from "astro-seo";
import "@styles/theme.css";
import "@styles/base.css";
import Footer from "@components/layout/Footer.astro";
import ReadingProgress from "@components/layout/ReadingProgress.astro";
import ScrollToTop from "@components/layout/ScrollToTop.astro";
import KeyboardShortcutsModal from "@components/KeyboardShortcutsModal.astro";
import SearchModal from "@components/SearchModal";
import VisitorCounter from "@components/VisitorCounter";

interface Props {
	title?: string;
	ogImage?: string;
	pageType?: string;
}

const { title = "", ogImage, pageType } = Astro.props;
const pageTitle = title.trim() ? `Thought Eddies | ${title}` : "Thought Eddies";
const currentUrl = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<script is:inline>
			// Theme flicker prevention - runs immediately before page renders
			(function () {
				const savedTheme = localStorage.getItem("theme");
				const systemDark = window.matchMedia(
					"(prefers-color-scheme: dark)",
				).matches;
				const theme = savedTheme || (systemDark ? "dark" : "light");

				// Remove any existing theme classes and set the correct one
				document.documentElement.className = theme;
			})();
		</script>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500;600&family=Crimson+Pro:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&family=JetBrains+Mono&display=swap"
			rel="stylesheet"
		/>
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link
			rel="alternate"
			type="application/rss+xml"
			title="RSS Feed"
			href="/rss.xml"
		/>
		{pageType === "posts" || pageType === "postsList" ? (
			<link
				rel="alternate"
				type="application/rss+xml"
				title="Posts RSS Feed"
				href="/posts/rss.xml"
			/>
		) : pageType === "logs" || pageType === "logsYear" || pageType === "logsMonth" ? (
			<link
				rel="alternate"
				type="application/rss+xml"
				title="Logs RSS Feed"
				href="/logs/rss.xml"
			/>
		) : pageType === "til" || pageType === "tilList" ? (
			<link
				rel="alternate"
				type="application/rss+xml"
				title="TIL RSS Feed"
				href="/til/rss.xml"
			/>
		) : pageType === "garden" ? (
			<link
				rel="alternate"
				type="application/rss+xml"
				title="Garden RSS Feed"
				href="/garden/rss.xml"
			/>
		) : pageType === "projects" ? (
			<link
				rel="alternate"
				type="application/rss+xml"
				title="Projects RSS Feed"
				href="/projects/rss.xml"
			/>
		) : null}
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={pageTitle}
			description="An Experimental Digital Garden"
			openGraph={{
				basic: {
					title: "Thought Eddies",
					type: "website",
					image: ogImage || "/og-image.png",
				},
			}}
		/>
		<title>{pageTitle}</title>
	</head>
	<body class="posts">
		<a href="#main-content" class="skip-link">Skip to main content</a>
		<ReadingProgress />

		<script is:inline>
			// Global theme toggle functionality - accessible to all components
			window.themeUtils = {
				enableLightTheme: function () {
					document.documentElement.className = "light";
					localStorage.setItem("theme", "light");
					window.dispatchEvent(
						new CustomEvent("themeChanged", {
							detail: { isDark: false },
						}),
					);
				},

				enableDarkTheme: function () {
					document.documentElement.className = "dark";
					localStorage.setItem("theme", "dark");
					window.dispatchEvent(
						new CustomEvent("themeChanged", {
							detail: { isDark: true },
						}),
					);
				},

				toggleTheme: function () {
					const currentTheme = document.documentElement.className;
					if (currentTheme === "dark") {
						window.themeUtils.enableLightTheme();
					} else {
						window.themeUtils.enableDarkTheme();
					}
				},

				getCurrentTheme: function () {
					return document.documentElement.className;
				},
			};

			// Global keyboard shortcuts
			document.addEventListener('keydown', function(e) {
				// Command+Shift+M or Ctrl+Shift+M for theme toggle
				if ((e.metaKey || e.ctrlKey) && e.shiftKey && e.key.toLowerCase() === 'm') {
					e.preventDefault();
					window.themeUtils.toggleTheme();
				}
			});
		</script>

		<main id="main-content">
			<div class="content-wrapper">
				<slot />
			</div>
			<Footer />
		</main>
		<ScrollToTop />
		<KeyboardShortcutsModal pageType={pageType} />
		<SearchModal client:only="react" />
		<VisitorCounter pageUrl={currentUrl} client:load />
		<script data-goatcounter="https://danielcorin.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
	</body>
</html>
