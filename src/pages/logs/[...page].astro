    margin: 0 0 var(--spacing-sm);
    font-size: var(--text-base);
    line-height: 1.5;
    color: var(--color-ink);
  }

  .entry-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-md);
  }

