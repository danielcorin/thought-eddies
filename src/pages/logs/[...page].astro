    color: var(--color-ink-light);
    font-style: italic;
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid var(--color-border);
  }

  /* Override toc article grid to be simpler for logs */
  .toc article {
    display: flex;
