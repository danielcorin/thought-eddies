    border-radius: 0.25rem;
    font-family: var(--font-mono);
  }

  @media (max-width: 640px) {
    .toc article {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .entry-footer {
      flex-wrap: wrap;
    }
  }
</style>
