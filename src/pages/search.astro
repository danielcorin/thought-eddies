---
import Navigation from "@components/layout/Navigation.astro";
import Layout from "@layouts/Layout.astro";
import SearchPage from "@components/SearchPage";

const ogImage = `/search/og.png`;
---

<Layout title="Search" ogImage={ogImage}>
  <Navigation />
  <main>
    <h1 class="page-title">Search</h1>
    <p class="page-description">Search across all site content</p>

    <SearchPage client:load />
  </main>
</Layout>

<style>
  .page-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--spacing-sm);
  }

  .page-description {
    font-size: var(--text-lg);
    color: var(--color-ink-light);
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  /* Search Page Styles */
  :global(.search-page) {
    max-width: 800px;
    margin: 0 auto;
  }

  :global(.search-header) {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  :global(.search-input-container) {
    flex: 1;
    position: relative;
  }

  :global(.search-icon) {
    position: absolute;
    left: var(--spacing-md);
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    color: var(--color-ink-light);
  }

  :global(.search-input) {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md) var(--spacing-sm) calc(var(--spacing-md) * 3);
    font-size: var(--text-lg);
    background: var(--color-bg-code);
    border: 2px solid transparent;
    border-radius: 0.5rem;
    color: var(--color-ink);
    transition: border-color 0.2s;
  }

  :global(.search-input:focus) {
    outline: none;
    border-color: var(--color-accent);
  }

  :global(.filter-toggle) {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--color-bg-code);
    border: 2px solid transparent;
    border-radius: 0.5rem;
    color: var(--color-ink);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.filter-toggle:hover) {
    border-color: var(--color-accent);
  }

  :global(.filter-toggle.active) {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  :global(.filter-icon) {
    width: 18px;
    height: 18px;
  }

  :global(.filter-count) {
    background: white;
    color: var(--color-accent);
    padding: 2px 6px;
    border-radius: 0.25rem;
    font-size: var(--text-xs);
    font-weight: 600;
  }

  :global(.filters-panel) {
    background: var(--color-bg-code);
    border-radius: 0.5rem;
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  :global(.filter-section) {
    margin-bottom: var(--spacing-lg);
  }

  :global(.filter-section:last-child) {
    margin-bottom: 0;
  }

  :global(.filter-section h3) {
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-ink-light);
    margin-bottom: var(--spacing-sm);
  }

  :global(.filter-options) {
    display: flex;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
  }

  :global(.filter-checkbox) {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    cursor: pointer;
  }

  :global(.filter-checkbox input) {
    cursor: pointer;
  }

  :global(.date-filters) {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  :global(.date-input) {
    padding: var(--spacing-xs) var(--spacing-sm);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    color: var(--color-ink);
  }

  :global(.tag-filters) {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  :global(.tag-filter) {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    font-size: var(--text-xs);
    color: rgb(71, 85, 105);
    text-decoration: none;
    border-radius: 0.375rem;
    background: rgb(241, 245, 249);
    border: none;
    transition: all 0.2s ease;
    font-weight: 500;
    cursor: pointer;
  }

  :global(.dark .tag-filter) {
    background: rgb(51, 65, 85);
    color: rgb(203, 213, 225);
  }

  :global(.tag-filter:hover) {
    background: rgb(226, 232, 240);
    color: rgb(30, 41, 59);
  }

  :global(.dark .tag-filter:hover) {
    background: rgb(71, 85, 105);
    color: rgb(241, 245, 249);
  }

  :global(.tag-filter.active) {
    background: var(--color-accent);
    color: white;
  }

  :global(.more-tags) {
    align-self: center;
    font-size: var(--text-sm);
    color: var(--color-ink-light);
  }

  :global(.clear-filters) {
    margin-top: var(--spacing-md);
    padding: var(--spacing-xs) var(--spacing-sm);
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    color: var(--color-ink-light);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.clear-filters:hover) {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  :global(.loading-state) {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--color-ink-light);
  }

  :global(.results-header) {
    margin-bottom: var(--spacing-md);
    color: var(--color-ink-light);
  }

  :global(.results-list) {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  /* PostCard-style result items */
  :global(.result-item) {
    display: block;
    padding: var(--spacing-lg) var(--spacing-xl);
    background: var(--color-bg-code);
    border-radius: 0.5rem;
    transition: opacity 0.2s;
  }

  :global(.result-header) {
    margin-bottom: var(--spacing-md);
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  :global(.result-date) {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }

  :global(.result-date-link) {
    color: var(--color-ink-light);
    text-decoration: none;
    transition: all 0.2s;
  }

  :global(.result-date-link:hover) {
    opacity: 0.8;
    color: var(--color-accent);
  }

  :global(.result-content) {
    margin-left: 0;
  }

  :global(.result-title) {
    margin: 0 0 var(--spacing-md);
    font-size: var(--text-2xl);
    line-height: 1.3;
  }

  :global(.result-title-link) {
    color: var(--color-ink);
    text-decoration: none;
    transition: all 0.2s;
  }

  :global(.result-title-link:hover) {
    opacity: 0.8;
    color: var(--color-accent);
  }

  :global(.result-description) {
    margin: 0 0 var(--spacing-md);
    font-size: var(--text-lg);
    line-height: 1.6;
    color: var(--color-ink);
    font-weight: 500;
  }

  :global(.result-preview) {
    margin: 0 0 var(--spacing-md);
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-ink-light);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  :global(.result-footer) {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }

  :global(.result-tags) {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
    flex: 1;
    min-width: 0;
  }

  :global(.result-tag) {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    font-size: var(--text-xs);
    color: rgb(71, 85, 105);
    text-decoration: none;
    border-radius: 0.375rem;
    background: rgb(241, 245, 249);
    border: none;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  :global(.dark .result-tag) {
    background: rgb(51, 65, 85);
    color: rgb(203, 213, 225);
  }

  :global(.result-tag:hover) {
    background: rgb(226, 232, 240);
    color: rgb(30, 41, 59);
  }

  :global(.dark .result-tag:hover) {
    background: rgb(71, 85, 105);
    color: rgb(241, 245, 249);
  }

  :global(.result-type) {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgb(239, 246, 255);
    color: rgb(30, 64, 175);
    font-size: var(--text-xs);
    font-weight: 500;
    text-decoration: none;
    border-radius: 9999px;
    border: 1px solid rgb(191, 219, 254);
    transition: all 0.2s ease;
  }

  :global(.dark .result-type) {
    background: rgb(30, 58, 138);
    color: rgb(191, 219, 254);
    border-color: rgb(30, 58, 138);
  }

  :global(.result-type:hover) {
    background: rgb(219, 234, 254);
    border-color: rgb(147, 197, 253);
  }

  :global(.dark .result-type:hover) {
    background: rgb(37, 99, 235);
    border-color: rgb(37, 99, 235);
  }

  :global(.read-more) {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-ink-light);
    text-decoration: none;
    padding: 0.25rem;
    transition: color 0.2s ease, transform 0.2s ease;
  }

  :global(.read-more:hover) {
    color: var(--color-accent);
    transform: translateX(2px);
  }

  :global(.arrow-icon) {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Mobile styles */
  @media (max-width: 640px) {
    :global(.search-header) {
      flex-direction: column;
    }

    :global(.filter-toggle) {
      width: 100%;
      justify-content: center;
    }

    :global(.date-filters) {
      flex-direction: column;
      align-items: stretch;
    }

    :global(.result-item) {
      padding: var(--spacing-md);
    }

    :global(.result-title) {
      font-size: var(--text-xl);
    }

    :global(.result-description) {
      font-size: var(--text-base);
    }

    :global(.result-footer) {
      flex-wrap: nowrap;
      align-items: flex-end;
    }
  }
</style>
