---
import { Icon } from "astro-icon/components";
---

<div
    id="navigation-shortcuts"
    class="fixed opacity-0 transition-opacity duration-200 pointer-events-none"
>
    <a
        href="/"
        aria-label="Go to home"
        class="nav-shortcut-button"
        data-tooltip="Home"
    >
        <Icon name="ph:house-bold" class="h-5 w-5" />
    </a>
    <a
        href="/notes"
        aria-label="Go to notes"
        class="nav-shortcut-button"
        data-tooltip="Notes"
    >
        <Icon name="ph:note-bold" class="h-5 w-5" />
    </a>
</div>

<script>
    const navigationShortcuts = document.getElementById("navigation-shortcuts");

    window.addEventListener("scroll", () => {
        if (navigationShortcuts) {
            navigationShortcuts.style.opacity =
                window.scrollY > 300 ? "1" : "0";
            navigationShortcuts.style.pointerEvents =
                window.scrollY > 300 ? "auto" : "none";
        }
    });
</script>

<style>
    #navigation-shortcuts {
        display: none;
        flex-direction: column;
        gap: 0.5rem;
        z-index: 1000;
    }

    @media (min-width: 1430px) {
        #navigation-shortcuts {
            display: flex;
            left: calc(var(--spacing-md) + 16rem);
            top: calc(var(--spacing-md) + 0.5rem);
        }
    }

    .nav-shortcut-button {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        border-radius: 50%;
        background: var(--color-bg);
        border: 2px solid var(--color-border);
        color: var(--color-ink);
        text-decoration: none;
        transition: background-color 0.2s;
        position: relative;
    }

    .nav-shortcut-button:hover {
        background: var(--color-bg-code);
    }

    .nav-shortcut-button[data-tooltip]:hover::after {
        content: attr(data-tooltip);
        position: absolute;
        left: calc(100% + 0.5rem);
        top: 50%;
        transform: translateY(-50%);
        background: var(--color-bg);
        border: 2px solid var(--color-border);
        color: var(--color-ink);
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: var(--text-sm);
        white-space: nowrap;
        opacity: 0;
        animation: tooltipFadeIn 0.2s ease-out forwards;
    }

    @keyframes tooltipFadeIn {
        from {
            opacity: 0;
            transform: translateY(-50%) translateX(-0.25rem);
        }
        to {
            opacity: 1;
            transform: translateY(-50%) translateX(0);
        }
    }
</style>
