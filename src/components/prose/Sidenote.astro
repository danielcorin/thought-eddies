---
import { marked } from 'marked';

interface Props {
  content: string;
}

const { content } = Astro.props;
const id = Math.random().toString(36).substring(7);
const htmlContent = marked.parseInline(content);
---

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const isMobile = () => window.matchMedia('(max-width: 768px)').matches;

    const clearInline = (contentEl: HTMLElement) => {
      contentEl.style.left = '';
      contentEl.style.right = '';
      contentEl.style.width = '';
    };

    const centerOnMobile = (toggleEl: Element, contentEl: HTMLElement) => {
      if (!isMobile()) return clearInline(contentEl);
      const wrapper = (toggleEl as HTMLElement).closest('.sidenote-wrapper') as HTMLElement;
      if (!wrapper) return;
      const wrapperRect = wrapper.getBoundingClientRect();
      // Use CSS-defined width, remove any inline width overrides
      contentEl.style.width = '';
      const measuredWidth = contentEl.offsetWidth || window.innerWidth;
      const leftPx = (window.innerWidth - measuredWidth) / 2 - wrapperRect.left;
      contentEl.style.left = `${leftPx}px`;
      contentEl.style.right = 'auto';
    };

    const open = (toggleEl: Element, checkboxEl: HTMLInputElement, contentEl: HTMLElement) => {
      checkboxEl.checked = true;
      contentEl.setAttribute('tabindex', '-1');
      contentEl.focus();
      centerOnMobile(toggleEl, contentEl);
    };

    const close = (toggleEl: Element, checkboxEl: HTMLInputElement, contentEl: HTMLElement) => {
      checkboxEl.checked = false;
      (toggleEl as HTMLElement).blur();
      clearInline(contentEl);
    };

    document.querySelectorAll('.sidenote-wrapper').forEach((wrapper) => {
      const toggle = wrapper.querySelector('.sidenote-toggle') as HTMLElement;
      const checkbox = wrapper.querySelector('.sidenote-checkbox') as HTMLInputElement;
      const content = wrapper.querySelector('.sidenote-content') as HTMLElement;

      checkbox.addEventListener('change', () => {
        if (checkbox.checked) {
          open(toggle, checkbox, content);
        } else {
          close(toggle, checkbox, content);
        }
      });
    });

    document.addEventListener('focusout', (e) => {
      setTimeout(() => {
        const active = document.activeElement;
        const container = (e.target as HTMLElement).closest('.sidenote-content');
        if (container && !container.contains(active)) {
          const checkbox = container.previousElementSibling as HTMLInputElement;
          checkbox.checked = false;
        }
      }, 0);
    });

    document.addEventListener('keydown', (e) => {
      if (e.key !== 'Escape') return;
      document.querySelectorAll('.sidenote-checkbox:checked').forEach((cb) => {
        (cb as HTMLInputElement).checked = false;
      });
    });

    window.addEventListener('resize', () => {
      if (!isMobile()) return;
      document.querySelectorAll('.sidenote-wrapper').forEach((wrapper) => {
        const checkbox = wrapper.querySelector('.sidenote-checkbox') as HTMLInputElement;
        if (!checkbox?.checked) return;
        const toggle = wrapper.querySelector('.sidenote-toggle') as HTMLElement;
        const content = wrapper.querySelector('.sidenote-content') as HTMLElement;
        centerOnMobile(toggle, content);
      });
    });
  });
</script>

<span class="sidenote-wrapper">
  <label
    class="sidenote-toggle"
    tabindex="0"
    role="button"
    aria-label={`Toggle sidenote: ${content.substring(0, 50)}...`}
    for={`sidenote-toggle-${id}`}
  ><span class="sidenote-anchor"><slot /></span></label>
  <input
    type="checkbox"
    id={`sidenote-toggle-${id}`}
    class="sidenote-checkbox"
    aria-hidden="true"
  />
  <span class="sidenote-content" role="note" set:html={htmlContent} />
</span>

<style>
  .sidenote-wrapper {
    position: relative;
  }

  .sidenote-toggle {
    cursor: pointer;
  }

  .sidenote-anchor {
    color: var(--color-link);
    text-decoration: underline;
    text-decoration-style: dotted;
    text-underline-offset: 2px;
    transition: color var(--transition-speed) ease;
  }

  .sidenote-toggle:hover .sidenote-anchor {
    color: var(--color-ink);
    text-decoration-style: solid;
  }

  .sidenote-toggle:focus {
    outline: none;
  }

  .sidenote-checkbox {
    display: none;
  }

  .sidenote-content {
    position: absolute;
    left: 50%;
    top: 100%;
    width: 250px;
    margin-top: 0.5rem;
    padding: var(--spacing-sm);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-size: var(--text-xs);
    line-height: 1.5;
    opacity: 0;
    visibility: hidden;
    transform: translateX(-50%) translateY(10px);
    transition:
      opacity var(--transition-speed) ease,
      visibility var(--transition-speed) ease,
      transform var(--transition-speed) ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    z-index: 100;
    outline: none;
  }

  .sidenote-content:focus {
    outline: none;
  }

  .sidenote-checkbox:checked ~ .sidenote-content {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }


  /* Mobile styles - show below content */
  @media (max-width: 768px) {
    .sidenote-content {
      position: absolute;
      /* Left is dynamically set via JS to center within viewport */
      right: auto;
      top: 100%;
      bottom: auto;
      /* Add a small extra gutter so edges don't touch viewport */
      --sidenote-mobile-gutter: 8px;
      width: calc(100vw - 2 * (var(--spacing-md) + var(--sidenote-mobile-gutter)));
      transform: translateY(10px);
      margin-top: 0.5rem;
      border-radius: 8px;
      padding: var(--spacing-md);
      font-size: var(--text-sm);
    }

    .sidenote-checkbox:checked ~ .sidenote-content {
      transform: translateY(0);
    }
  }

  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .sidenote-content {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }
  }

  /* Ensure consistent font sizes for all content */
  .sidenote-content :global(code),
  .sidenote-content :global(pre) {
    font-size: inherit;
  }

  .sidenote-content :global(pre) {
    margin: 0.5em 0;
    padding: 0.5em;
    overflow-x: auto;
  }

  .sidenote-content :global(p) {
    margin: 0;
  }

  .sidenote-content :global(p + p) {
    margin-top: 0.5em;
  }

</style>
